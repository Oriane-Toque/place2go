{{ form_start(form, { attr:{ novalidate: 'novalidate' }}) }}

	{{ form_row(form.firstname) }}
	{{ form_row(form.lastname) }}
	{{ form_row(form.nickname) }}
	
	<div class="mb-3">
		<label for="registration_form_avatar">Click pour générer ton avatar</label>
		<div class="avatar d-flex">
			
			<div class="avatar__generated me-2" style="width:50px; height:50px; border: solid 1px #000">
				<img src="{{ asset('uploads/avatar/default-profile.svg') }}" style="width: 100%">
			</div>
			<button id="avatar__generate" class="btn btn-success"><span>Générer</span></button>
			{{ form_row(form.avatar) }}
		</div>
	</div>

	{{ form_row(form.city) }}
	{{ form_row(form.description) }}
	{{ form_row(form.email) }}
	{{ form_row(form.password) }}

	<div class="contentProfile__buttons my-3">
		<a class="--back contentProfile__infos-buttonText btn btn-primary" href="{{ path('app_profile_profile') }}" role="button to back">
			<i class="fa fa-angle-left"></i>Retour
		</a>

		<button type="submit" id="submit_button" class="--action contentProfile__infos-buttonText btn btn-success">{{ button_label }}</button>
	</div>

{{ form_end(form) }}
