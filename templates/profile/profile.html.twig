{% extends "layout/base.html.twig" %}

{% block title %}Dashboard{% endblock %}

{% block body %}


	{# Navigation secondaire du dashboard + informations #}
	{% include "profile/_nav_aside.html.twig" %}

	{# Contenu du profil #}
	<section class="contentProfile">
		{# Les derniers sorties proposées par l'utilisateur #}
		<div class="contentProfile__lastExits">
			<h2>Dernières sorties publiées</h2>
			{# Début carte sortie #}
			{% for event in userLastExits %}
				<div class="card mb-3">
					<div class="row g-0">

						<div class="contentProfile__lastExits-picture col-lg-4">
							{# TODO Image de la sortie (améliorations) #}
							<img
								src="https://mdbootstrap.com/wp-content/uploads/2020/06/vertical.jpg"
								alt="..."
								class="img-fluid"
							/>
						</div>

						<div class="contentProfile__lastExits-infos col-lg-8">
							<div class="card-header">
								<h3 class="card-title">{{ event.title }}</h3>
								<p><time datetime="{{ event.eventDate|date("d-m-Y") }}">{{ event.eventDate|date("d/m/Y") }}</time> à <time datetime="{{ event.eventDate|date("H:i") }}">{{ event.eventDate|date("H:i") }}</time>h</p>
							</div>
							<div class="card-body">
								<div class="contentProfile__lastExits-infos_details">
									<p class="card-text"><span>Organisé par :</span> {{ event.author }}</p>
									{# fonction length de twig pour retourner le nombre de participants #}
									<p class="card-text"><span>Nbr part :</span> {{ event.attendants|length }} / {{ event.maxAttendants }}</p>
								</div>
								<div class="contentProfile__lastExits-infos_actions">
									{# Bouton pour voir les détails #}
									<a class="--show btn btn-primary btn-floating" href="{{ path("app_event_show", {id:event.id}) }}" role="button">
										<i class="far fa-eye"></i>
									</a>

									{# Bouton pour éditer la sortie #}
									<a class="--edit btn btn-warning btn-floating" href="#" role="button">
										<i class="fas fa-pencil-alt"></i>
									</a>

									{# Bouton pour supprimer la sortie #}
									<a class="--delete btn btn-danger btn-floating" href="{{ path("app_event_delete", {id:event.id}) }}" role="button">
										<i class="fas fa-trash-alt"></i>
									</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
			
			{# Fin carte sortie #}
		</div>

		{# Les dernières sorties auxquelles a participé l'utilisateur #}
		<div class="contentProfile__lastExits">
			<h2>Dernières sorties effectuées</h2>
			{# Début carte sortie #}
			{% for event in attendantLastExits %}
				<div class="card mb-3">
					<div class="row g-0">

						<div class="contentProfile__lastExits-picture col-lg-4">
							{# Image de la sortie #}
							<img
								src="https://mdbootstrap.com/wp-content/uploads/2020/06/vertical.jpg"
								alt="Image de la sortie"
								class="img-fluid"
							/>
						</div>

						<div class="contentProfile__lastExits-infos col-lg-8">
							<div class="card-header">
								<h3 class="card-title">{{ event.title }}</h3>
								<p><time datetime="{{ event.eventDate|date("d/m/Y") }}">{{ event.eventDate|date("d/m/Y") }}</time> à <time datetime="{{ event.eventDate|date("H:i") }}">{{ event.eventDate|date("H:i") }}</time>h</p>
							</div>
							<div class="card-body">
								<div class="contentProfile__lastExits-infos_details">
									<p class="card-text"><span>Organisé par :</span> {{ event.author }}</p>
									<p class="card-text"><span>Nbr part :</span> {{ event.attendants|length }} / {{ event.maxAttendants }}</p>
								</div>
								<div class="contentProfile__lastExits-infos_actions">
									{# Bouton pour voir les détails #}
									<a class="--show btn btn-primary btn-floating" href="{{ path("app_event_show", {id:event.id}) }}" role="button">
										<i class="far fa-eye"></i>
									</a>

									{# Bouton pour ne plus participer à la sortie #}
									<a class="--delete btn btn-danger btn-floating" href="{{ path("app_event_leave", {id:event.id}) }}" role="button">
										<i class="fas fa-sign-out-alt"></i>
									</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			{# Fin carte sortie #}
			{% endfor %}
			
		</div>

		{# TODO uniquement version supérieur #}
		<div class="contentProfile__lastExits">
			<h2>Nouveautés de mes amis</h2>
			{# Début carte notifications sur les amis #}
			<div class="card mb-3">
				<div class="row g-0">

					<div class="contentProfile__lastExits-picture col-lg-4">
						{# Image profil de l'Ami #}
						<img
							src="https://mdbootstrap.com/wp-content/uploads/2020/06/vertical.jpg"
							alt="Image de la sortie"
							class="img-fluid"
						/>
					</div>

					<div class="contentProfile__lastExits-infos col-lg-8">
						<div class="card-header">
							<h3 class="card-title">Nom Prénom </br>participera à X évènements</h3>
							<p><time datetime="2025/03/12">2025/03/12</time></p>
						</div>
						<div class="card-body">
							<div class="contentProfile__lastExits-infos_details">
								<p class="card-text"><span>Organisé par :</span> Nom de l'organisateur</p>
								<p class="card-text"><span>Nbr part :</span> 2 / 5</p>
							</div>
							<div class="contentProfile__lastExits-infos_actions">
								{# Bouton pour voir les détails #}
								<a class="--show btn btn-primary btn-floating" href="#!" role="button">
									<i class="far fa-eye"></i>
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		{# TODO uniquement dans version supérieure #}
		<div class="contentProfile__lastSearch">
			<h2>Ma recherche du moment</h2>
			<p>Prévoir lien direct vers la recherche sauvegardée</p>
		</div>
	</section>



{% endblock %}