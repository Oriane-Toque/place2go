{{ form_start(form)}}

	<div class="filter__form p-3">

		<div class="d-flex justify-content-between align-items-center mb-3 w-100">
			{{ form_widget(form.q) }}
			<button type="submit" class="btn btn-outline-info ms-3" type="button">Rechercher</button>
		</div>

		{% if app.request.get('_route') == 'app_home' %}
			{{ form_widget(form.categories, {'attr': {'style': 'visibility:hidden'}})}}
			{{ form_errors(form.categories) }}
		{% else %}
			{{ form_widget(form.categories)}}
			{{ form_errors(form.categories) }}
		{% endif %}

	</div>

{{ form_end(form)}}
