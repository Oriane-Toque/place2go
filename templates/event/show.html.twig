{% extends "layout/base.html.twig" %}

{% block title %}
	{{ event.title }}
{% endblock %}


{% block body %}

	<div class="container-xl my-5">

        <section id="event-show">
        
            <div class="row">
                <div class="col-6">

                    <div class="card">
                        <img src="https://mdbootstrap.com/img/new/standard/nature/111.jpg" class="card-img-top" height="150" alt="image"/>
                        
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <h5 class="card-author">
                                    <a href="{{ path('app_profile_show', {id: event.author.id}) }}">{{ event.author.nickname }}</a>
                                </h5>
                                <div class="card-place">
                                    {{ event.attendants|length }}
                                    /
                                    {{ event.maxAttendants }}
                                    participants
                                </div>
                            </div>

                            <div class="d-flex justify-content-between">
                                <h3 class="card-title">{{ event.title }}</h5>
                                <div class="card-date text-muted">Date :
                                    {{ event.eventDate|date('d-m-Y H:i') }}
                                </div>
                            </div>

                            <p class="card-description">
                                {{ event.description }}
                            </p>
                            <div class="d-flex justify-content-end">
                                <a href="#!" class="btn btn-primary">S'incrire</a>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="col-6">
                    <p>
                        La carte ici !
                    </p>
                    <p>
                        lat:
                        {{ event.lat }}</p>
                    <p>
                        lon:
                        {{ event.lon }}</p>
                </div>
            </div>

        </section>

	</div>

{% endblock %}
