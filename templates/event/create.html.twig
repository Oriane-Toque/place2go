{% extends "layout/base.html.twig" %}

{% block title %}Ajouter une sortie{% endblock %}

{% block menu_events %}active{% endblock %}

{% block body %}

<div class="wrapper">
    <div class="mb-4">
		<h2 class="m-0"><i class="fa fa-edit mr-2"></i>Ajouter une sortie</h2>
	</div>

    {{ form_start( form, { attr: {novalidate: 'novalidate'} } ) }}

        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.title, {'attr': {'placeholder': 'Sortie cinéma, Boire un coup, ...'}}) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.event_date, {'attr': {'placeholder': 'Sortie cinéma, Boire un coup, ...'}}) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.address, {'attr': {'placeholder': '25 rue du Général...'}}) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.maxAttendants) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.city, {'attr': {'placeholder': 'Paris, Lyon, ...'}}) }}
                {{ form_row(form.description, {'attr': {'placeholder': 'Détaillez votre sortie (description, organisation, lieu...)'}}) }}
                {{ form_row(form.categories) }}
            </div>
            <div class="col-md-6">
                <h3>Cliquez sur la carte pour indiquer l'adresse de votre sortie</h3>
                <div class="event-map"></div>
            </div>
        </div>
        <div class="mb-3">
            <a class="btn btn-primary" href="{{ path('app_event_list') }}"><i class="fa fa-angle-left me-2"></i>Annuler</a>
            <button type="submit" class="btn btn-success">Créer la sortie</button>
        </div>
    {{ form_end(form) }}

</div>

{% endblock %}