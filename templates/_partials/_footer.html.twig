<footer id="footer" class="p-5 mt-5">
	<div class="container">

		<div class="row">
			<div class="col-5 m-auto text-center">
				<div class="icon-list-social d-flex justify-content-around">
					<a href="#" target="_blank" rel="noopener" title="Twitter" class="icon-list-social-link">
						<i class="fab fa-twitter fa-3x"></i>
					</a>
					<a href="#" target="_blank" rel="noopener" title="GitHub" class="icon-list-social-link">
						<i class="fab fa-github fa-3x"></i>
					</a>
					<a href="#" target="_blank" rel="noopener" title="Facebook" class="icon-list-social-link">
						<i class="fab fa-facebook fa-3x"></i>
					</a>
				</div>
			</div>
		</div>

		<hr class="my-5">

		<div class="row">
			<div class="col-lg-3 col-md-6 mb-5 mb-lg-0">
				<ul class="list-unstyled footer__links">
					<li class="mb-2">
						<a href="#">A propos</a>
					</li>
					<li class="mb-2">
						<a href="#">Mentions légales</a>
					</li>
					<li class="mb-2">
						<a href="#">Contactez-nous</a>
					</li>
					<li class="mb-2">
						<a href="#">Team</a>
					</li>
				</ul>
			</div>

			<div class="col-lg-3 col-md-6 mb-5 mb-lg-0">
				<div class="text-uppercase text-xs mb-3 fw-bold fw-bold">Place To Random</div>
				<ul class="list-unstyled">
						{% for event in eventRepository.findRandEvents(app.user.city ?? '') %}
							<li class="mb-2">
								<a href="{{ path("app_event_show", {id: event.id}) }}">{{ event.title }}</a>
							</li>
						{% endfor %}
				</ul>
			</div>

			<div class="col-lg-3 col-md-6 mb-5 mb-lg-0">
				<div class="text-uppercase text-xs mb-3 fw-bold">Catégories populaires</div>
				<ul class="list-unstyled">
						{% for category in categoryRepository.findTopCategories %}
							<li class="mb-2">
								<a href="/events?q=&categories%5B%5D={{ category[0].id }}">{{ category[0].name }}</a>
							</li>
						{% endfor %}
				</ul>
			</div>

			<div class="col-lg-3 col-md-6 mb-5 mb-lg-0">
				<div class="text-uppercase-expanded text-xs mb-3 fw-bold">Top Contributeurs</div>
				<ul class="list-unstyled">
						{% for contributor in eventRepository.findTopContributors %}
							<li class="mb-2">
								<a href="{{ path("app_profile_show", {id: contributor[0].id}) }}">{{ contributor[0].nickname }}</a>
							</li>
						{% endfor %}
				</ul>
			</div>

		</div>

		<div class="mt-5">
			<div class="text-center">Copyright © 2021</div>

			<div class="text-center text-sm fst-italic">
				Made with
				<i class="fas fa-heart text-danger"></i>
				by
				<a href="http://">Daniel</a>,
				<a href="http://">Fred</a>,
				<a href="http://">Oriane</a>,
				<a href="http://">Yohann</a>
			</div>
		</div>

	</div>
</footer>
