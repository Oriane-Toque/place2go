{% extends "admin/layout/base.html.twig" %}

{% block menu_user 'active' %}

{% block title 'Utilisateurs' %}

{% block body %}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Utilisateurs</h1>
</div>

<!-- Content Row -->
<div class="row">

    <!-- Filter -->
    <div class="col-12">
        <div class="card shadow mb-4">
            <!-- Card Header - Dropdown -->
            <div
                class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Filtres</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <div class="filter-area">
                    <p>Tous les champs de filtres ici</p>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Content Row -->
<div class="row">

    <!-- List all events -->
    <div class="col-12">
        <div class="card shadow mb-4">
            <!-- Card Header - Dropdown -->
            <div
                class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Liste des utilisateurs</h6>
                
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <div class="events-list">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#Id</th>
                                <th>Image</th>
                                <th>Nickname</th>
                                <th>Nom</th>
                                <th>Date de naissance</th>
                                <th>Ville</th>
                                <th>Date inscription</th>
                                <th>Actions</th>
                            </tr>
                        </thead>

                        <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.id }}</td>
                                    <td><img src="{{ user.avatar }}" width="75"/></td>
                                    <td>
                                        <a href="{{ path('admin_user_show', {id: user.id}) }}">{{ user.nickname }}</a>
                                    </td>
                                    <td>{{ user.firstname }} {{ user.lastname }}</td>
                                    <td>{{ user.birthday|date('d/m/Y') }}</td>
                                    <td>{{ user.city }}</td>
                                    <td>{{ user.createdAt|date('d/m/Y') }}</td>
                                    <td>
                                        <a href="{{ path('admin_user_show', {id: user.id}) }}" title="AperÃ§u" class="me-2"><i class="fas fa-eye text-secondary"></i></a>
                                        <a href="{{ path('admin_user_edit', {id: user.id}) }}" title="Editer" class="me-2"><i class="fas fa-edit text-secondary"></i></a>
                                        <a href="{{ path('admin_user_delete', {id: user.id}) }}" title="Supprimer"><i class="fas fa-trash text-danger"></i></a>
                                        {#<a href="#" onclick="delModal('#delModal', '/admin/user/delete/{{ user.id }}')" class="delModal" data-mdb-toggle="modal" data-mdb-target="#delModal"><i class="fa fa-trash text-danger"></i></a>#}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="8">Aucune utilisateur pour le moment</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

{% endblock %}
