{% extends "admin/layout/base.html.twig" %}

{% block menu_report 'active' %}

{% block title 'Signalements' %}

{% block body %}

	<!-- Page Heading -->
	<div class="d-sm-flex align-items-center justify-content-between mb-4">
		<h1 class="h3 mb-0 text-gray-800">Signalements en Cours</h1>
	</div>

	<!-- Content Row -->
	<div
		class="row">

		<!-- Filter -->
		<div class="col-12">
			<div
				class="card shadow mb-4">
				<!-- Card Header - Dropdown -->
				<div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
					<h6 class="m-0 font-weight-bold text-primary">Filtres</h6>
				</div>
				<!-- Card Body -->
				<div class="card-body">
					<div class="filter-area">
						<p>Tous les champs de filtres ici</p>
					</div>
				</div>
			</div>
		</div>

	</div>

	<!-- Content Row -->
	<div
		class="row">

		<!-- List all items -->
		<div class="col-12">
			<div
				class="card shadow mb-4">
				<!-- Card Header - Dropdown -->
				<div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
					<h6 class="m-0 font-weight-bold text-primary">Liste des signalements</h6>

				</div>
				<!-- Card Body -->
				<div class="card-body">
					<div class="events-list">
						<table class="table table-hover">
							<thead>
								<tr>
									<th>#Id</th>
									<th>Auteur</th>
									<th>Utilisateur signalé</th>
									<th>Sortie signalée</th>
									<th>Type</th>
									<th>Statut</th>
									<th>Date du signalement</th>
									<th>Actions</th>
								</tr>
							</thead>

							<tbody>
								{% for report in reports %}
									<tr>
										<td>{{ loop.index }}</td>
										<td>
											<a href="{{ path('app_profile_show', {id: report.author.id}) }}" class="me-2" data-mdb-toggle="tooltip" data-mdb-placement="bottom" title="Voir">
												<i class="fas fa-sign-in-alt"></i>
											</a>
											{{ report.author }}
										</td>
										<td>
											<a href="{{ path('app_profile_show', {id: report.user.id}) }}" class="me-2" data-mdb-toggle="tooltip" data-mdb-placement="bottom" title="Voir">
												<i class="fas fa-sign-in-alt"></i>
											</a>
											{{ report.user }}
										</td>
										<td>
											<a href="{{ path('app_event_show', {id: report.event.id}) }}" data-mdb-toggle="tooltip" class="me-2" data-mdb-placement="bottom" title="Voir">
												<i class="fas fa-sign-in-alt"></i>
											</a>
											{{ report.event.title }}
										</td>
										<td>{{ report.type|capitalize }}</td>
										<td>{% if report.status is same as(false) %}En cours{% endif %}Traité</td>
										<td>{{ report.createdAt|date('d/m/Y') }}</td>
										<td>
											{# Voir les détails #}
											<a href="#" class="me-2" data-mdb-toggle="tooltip" data-mdb-placement="bottom" title="Aperçu">
												<i class="fas fa-eye text-secondary"></i>
											</a>
											{% if app.request.attributes.get('_route') is same as('admin_report_list') %}
												{# Archiver/Traiter #}
												<a href="#" class="me-2" data-mdb-toggle="tooltip" data-mdb-placement="bottom" title="Traiter">
													<i class="fas fa-check-square text-success"></i>
												</a>
											{% else %}
												{# Supprimer #}
												<a href="#" class="me-2" data-mdb-toggle="tooltip" data-mdb-placement="bottom" title="Supprimer">
													<i class="fas fa-trash-alt text-danger"></i>
												</a>
											{% endif %}
										</td>
									</tr>
								{% else %}
									<tr>
										<td colspan="4">Aucun signalement en cours de traitement</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>

	</div>

{% endblock %}
