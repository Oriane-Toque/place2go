{% extends "admin/layout/base.html.twig" %}

{% block menu_event 'active' %}

{% block title 'Sorties' %}

{% block body %}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Sorties</h1>
</div>

<!-- Content Row -->
<div class="row">

    <!-- Filter -->
    <div class="col-12">
        <div class="card shadow mb-4">
            <!-- Card Header - Dropdown -->
            <div
                class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Filtres</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <div class="filter-area">
                    <p>Tous les champs de filtres ici</p>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Content Row -->
<div class="row">

    <!-- List all items -->
    <div class="col-12">
        <div class="card shadow mb-4">
            <!-- Card Header - Dropdown -->
            <div
                class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Liste des sorties</h6>
                
            </div>
            <!-- Card Body -->
            {{ include("admin/event/_event_list.html.twig", {'events': events }) }}  

                        <tbody>
                            {% for event in events %}
                                <tr>
                                    <td>{{ event.id }}</td>
                                    <td>
                                        <a href="{{ path('admin_event_show', {id: event.id}) }}">{{ event.title }}</a>
                                    </td>
                                    {# <td>{{ event.city }}</td> #}
                                    <td>
                                        {{ event.author.nickname }}
                                    </td>
                                    <td>
                                        {{ event.attendants|length }}/{{ event.maxAttendants }}
                                    </td>
                                    <td>{{ event.eventDate|date('d/m/Y H:i') }}</td>
                                    <td>
                                        <a href="{{ path('admin_event_show', {id: event.id}) }}" title="AperÃ§u" class="me-2"><i class="fas fa-eye text-secondary"></i></a>
                                        <a href="{{ path('admin_event_edit', {id: event.id}) }}" title="Editer" class="me-2"><i class="fas fa-edit text-secondary"></i></a>
                                        <a href="{{ path('admin_event_delete', {id: event.id}) }}" title="Supprimer"><i class="fas fa-trash text-danger"></i></a>
                                        {#<a href="#" onclick="delModal('#delModal', '/admin/event/delete/{{ event.id }}')" class="delModal" data-mdb-toggle="modal" data-mdb-target="#delModal"><i class="fa fa-trash text-danger"></i></a>#}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7">Aucune sortie pour le moment</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

{% endblock %}
